<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.TaskDetails"
             BackgroundColor="Grey"
             Title="Task Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label  Style="{StaticResource TaskDetailsLabel}" Text="Nazwa zadania:"/>
            <Label  Style="{StaticResource TaskDetailsName}" x:Name="TaskNameLabel"/>

            <Label Style="{StaticResource TaskDetailsLabel}" Text="Opis zadania:"/>
            <Label Style="{StaticResource TaskDetailsDescription}" x:Name="TaskDescriptionLabel"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
