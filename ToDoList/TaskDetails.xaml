<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.TaskDetails"
             BackgroundColor="Grey"
             Title="">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60" />
            <RowDefinition Height="50"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <Label  Style="{StaticResource TaskDetailsLabel}" Grid.Row="0" Text="Nazwa zadania:"/>
        <Label  Style="{StaticResource TaskDetailsName}" Grid.Row="1" x:Name="TaskNameLabel"/>

        <Label Style="{StaticResource TaskDetailsLabel}" Grid.Row="2" Text="Opis zadania:"/>
        <Label Style="{StaticResource TaskDetailsDescription}" Grid.Row="3" x:Name="TaskDescriptionLabel"/>
    </Grid>
</ContentPage>
